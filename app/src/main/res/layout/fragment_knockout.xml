<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragments.KnockoutFragment">
    
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/knockout_match11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/knockout_match12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/knockout_match11" />

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/knockout_match13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="48dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/knockout_match12" />

            <LinearLayout
                android:id="@+id/knockout_match14"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/knockout_match13" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match12"
                app:layout_constraintStart_toEndOf="@+id/knockout_match11"
                app:layout_constraintTop_toTopOf="@+id/knockout_match11" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match14"
                app:layout_constraintStart_toEndOf="@+id/knockout_match13"
                app:layout_constraintTop_toTopOf="@+id/knockout_match13" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match22"
                app:layout_constraintStart_toEndOf="@+id/knockout_match21"
                app:layout_constraintTop_toTopOf="@+id/knockout_match21" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match4a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match31"
                app:layout_constraintStart_toEndOf="@+id/knockout_match31"
                app:layout_constraintTop_toTopOf="@+id/knockout_match31"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:id="@+id/knockout_match41b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match5"
                app:layout_constraintStart_toEndOf="@+id/knockout_match5"
                app:layout_constraintTop_toTopOf="@+id/knockout_match5" />

            <LinearLayout
                android:id="@+id/knockout_match5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match4a"
                app:layout_constraintStart_toEndOf="@+id/knockout_match4a"
                app:layout_constraintTop_toTopOf="@+id/knockout_match4a" />

            <LinearLayout
                android:id="@+id/knockout_match31b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match31"
                app:layout_constraintStart_toEndOf="@+id/knockout_match41b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match31"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match11b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match11"
                app:layout_constraintStart_toEndOf="@+id/knockout_match21b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match11"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match21b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match21"
                app:layout_constraintStart_toEndOf="@+id/knockout_match31b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match21"
                app:layout_constraintVertical_bias="1.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match22b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match22"
                app:layout_constraintStart_toEndOf="@+id/knockout_match31b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match22"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match12b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match12"
                app:layout_constraintStart_toEndOf="@+id/knockout_match21b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match12"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match13b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match13"
                app:layout_constraintStart_toEndOf="@+id/knockout_match22b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match13"
                app:layout_constraintVertical_bias="0.0" />

            <LinearLayout
                android:layout_marginStart="24dp"
                android:id="@+id/knockout_match14b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/knockout_match14"
                app:layout_constraintStart_toEndOf="@+id/knockout_match22b"
                app:layout_constraintTop_toTopOf="@+id/knockout_match14"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtWinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Winner"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/knockout_match5"
                app:layout_constraintEnd_toEndOf="@+id/knockout_match5"
                app:layout_constraintStart_toStartOf="@+id/knockout_match5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</ScrollView>